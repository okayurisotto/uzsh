{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "moduleResolution": "Node",
    "noEmit": true,
    "target": "ESNext"
  },
  "extends": ["@tsconfig/strictest/tsconfig.json"],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./tsup.config.ts",
    "./vite.config.ts"
  ]
}
